---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Atlas - The agentic game developer">
    <!-- Navbar -->
    <div class="fixed top-8 left-0 right-0 z-50 px-6 pointer-events-none">
        <div class="max-w-6xl mx-auto flex justify-between items-center pointer-events-auto">
            <!-- Logo -->
            <div class="flex items-center gap-3 bg-neutral-100/80 dark:bg-neutral-800/80 backdrop-blur-md px-5 py-2.5 rounded-full border border-neutral-200/50 dark:border-neutral-700/50 shadow-sm">
                <img src="/logo.png" alt="atlas" class="w-8 h-8">
                <span class="font-bold tracking-tight text-lg">Atlas</span>
            </div>

            <!-- Navigation Links -->
            <nav class="hidden md:flex items-center gap-8 bg-neutral-100/30 dark:bg-neutral-800/10 backdrop-blur-sm px-8 py-3 rounded-full border border-neutral-200/20 dark:border-neutral-700/10">
                <a class="text-sm font-medium text-neutral-600 dark:text-neutral-400 hover:text-black dark:hover:text-white transition-colors" href="#">Features</a>
                <a class="text-sm font-medium text-neutral-600 dark:text-neutral-400 hover:text-black dark:hover:text-white transition-colors" href="#">Pricing</a>
                <a class="text-sm font-medium text-neutral-600 dark:text-neutral-400 hover:text-black dark:hover:text-white transition-colors" href="#">About</a>
                <a class="text-sm font-medium text-neutral-600 dark:text-neutral-400 hover:text-black dark:hover:text-white transition-colors" href="#">API</a>
            </nav>

            <!-- Auth Buttons -->
            <div class="flex items-center gap-2 bg-neutral-100/80 dark:bg-neutral-800/80 backdrop-blur-md p-1.5 rounded-full border border-neutral-200/50 dark:border-neutral-700/50 shadow-sm">
                <a href="/chat" class="px-5 py-2 text-sm font-medium text-neutral-700 dark:text-neutral-300 hover:text-black dark:hover:text-white transition-colors">Log in</a>
                <a href="/chat" class="bg-[#c2195f] text-white px-6 py-2 rounded-full text-sm font-semibold hover:opacity-90 transition-opacity">Get Started</a>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <main class="relative min-h-screen pt-40 pb-20 overflow-hidden gradient-bg">
        <section class="max-w-6xl mx-auto px-6 text-center relative z-10">
            <!-- Badge -->
            <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-neutral-200/50 dark:bg-neutral-800/50 border border-neutral-300/50 dark:border-neutral-700/50 text-xs font-medium mb-12 animate-float">
                <span class="flex h-2 w-2 rounded-full bg-blue-500"></span>
                Introducing Simulator, the new player behavior simulation agent
            </div>

            <!-- Hero Text -->
            <h1 class="text-4xl md:text-4xl font-bold tracking-tight mb-8 text-neutral-900 dark:text-white leading-[1.1]">
                Your personal agentic 2D game developer.
            </h1>
            <p class="text-xl md:text-xl text-neutral-500 dark:text-neutral-400 max-w-2xl mx-auto mb-16 font-light leading-relaxed">
                Bring game mechanics, quests and systems to life.
            </p>

            <!-- Input Area -->
            <div class="max-w-3xl mx-auto">
                <div class="bg-white dark:bg-[#1C1C1C] rounded-[2rem] p-4 shadow-2xl shadow-black/5 border border-neutral-200 dark:border-neutral-800">
                    <div class="flex flex-col min-h-[160px] relative">
                        <!-- Top Bar with Placeholders and v3 Badge -->
                        <div class="flex items-center gap-2 mb-4">
                            <!-- Placeholder for Logo and Model Picture -->
                             <!-- USER REQUEST: Placeholders for logo and model picture besides v3 -->
                            

                            <div class="flex items-center gap-1.5 px-3 py-1 rounded-lg bg-neutral-100 dark:bg-neutral-800 border border-neutral-200 dark:border-neutral-700">
                                <img src="/model.jpeg" alt="atlas" class="w-6 h-6 rounded-md">
                                <span class="text-xs font-semibold text-neutral-600 dark:text-neutral-400">v3</span>
                            </div>
                        </div>

                        <!-- Textarea -->
                        <textarea class="w-full bg-transparent border-none focus:ring-0 text-lg resize-none placeholder-neutral-400 dark:placeholder-neutral-600 cursor-default outline-none" placeholder="Create a 2D action platformer for mobile..." readonly></textarea>
                        
                        <!-- Bottom Actions -->
                        <div class="mt-auto flex items-center justify-between">
                            <button class="p-2 hover:bg-neutral-100 dark:hover:bg-neutral-800 rounded-lg transition-colors text-neutral-400">
                                <span class="material-symbols-outlined">attach_file</span>
                            </button>
                            <div class="flex items-center gap-2">
                                <button class="p-2 hover:bg-neutral-100 dark:hover:bg-neutral-800 rounded-lg transition-colors text-neutral-400">
                                    <span class="material-symbols-outlined">tune</span>
                                </button>
                                <button class="bg-[#c2195f] text-white p-2 rounded-xl hover:opacity-90 transition-opacity">
                                    <span class="material-symbols-outlined">send</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Feature Pills -->
                <div class="flex flex-wrap justify-center gap-3 mt-8">
                    <div class="flex items-center gap-2 px-4 py-2 rounded-full border border-neutral-200 dark:border-neutral-800 bg-white dark:bg-neutral-900 text-sm text-neutral-600 dark:text-neutral-400 cursor-default hover:bg-neutral-50 dark:hover:bg-neutral-800 transition-colors">
                        <span class="material-symbols-outlined text-[18px] text-green-500">center_focus_weak</span>
                        Deep Search
                    </div>
                    <div class="flex items-center gap-2 px-4 py-2 rounded-full border border-neutral-200 dark:border-neutral-800 bg-white dark:bg-neutral-900 text-sm text-neutral-600 dark:text-neutral-400 cursor-default hover:bg-neutral-50 dark:hover:bg-neutral-800 transition-colors">
                        <span class="material-symbols-outlined text-[18px] text-blue-500">lightbulb</span>
                        Think
                    </div>
                    <div class="flex items-center gap-2 px-4 py-2 rounded-full border border-neutral-200 dark:border-neutral-800 bg-white dark:bg-neutral-900 text-sm text-neutral-600 dark:text-neutral-400 cursor-default hover:bg-neutral-50 dark:hover:bg-neutral-800 transition-colors">
                        <span class="material-symbols-outlined text-[18px] text-orange-500">edit_square</span>
                        Edit Image
                    </div>
                </div>
            </div>
        </section>

        <!-- Footer -->
        <footer class="mt-32 border-t border-neutral-200 dark:border-neutral-800 pt-10">
            <div class="max-w-6xl mx-auto px-6 flex flex-col md:flex-row items-center justify-center gap-8 text-neutral-400 text-sm font-medium">
                <div class="flex items-center gap-2">
                    <span class="material-symbols-outlined text-[18px]">schedule</span>
                    Available 24/7
                </div>
                <div class="w-1.5 h-1.5 rounded-full bg-neutral-300 dark:bg-neutral-700 hidden md:block"></div>
                <div class="flex items-center gap-2">
                    <span class="material-symbols-outlined text-[18px]">lock</span>
                    Securely Encrypted
                </div>
                <div class="w-1.5 h-1.5 rounded-full bg-neutral-300 dark:bg-neutral-700 hidden md:block"></div>
                <div class="flex items-center gap-2">
                    <span class="material-symbols-outlined text-[18px]">groups</span>
                    For the people
                </div>
            </div>
        </footer>

        <!-- Background Glows -->
        <div class="absolute -top-[10%] -left-[10%] w-[40%] h-[40%] bg-blue-100/30 dark:bg-blue-900/10 blur-[120px] rounded-full -z-0"></div>
        <div class="absolute -bottom-[10%] -right-[10%] w-[40%] h-[40%] bg-purple-100/30 dark:bg-purple-900/10 blur-[120px] rounded-full -z-0"></div>
    </main>

    <!-- Dark Mode Toggle -->
    <button id="theme-toggle" class="fixed bottom-8 right-8 p-3 bg-white dark:bg-neutral-800 border border-neutral-200 dark:border-neutral-700 rounded-full shadow-lg hover:scale-110 transition-transform cursor-pointer">
        <span class="material-symbols-outlined block dark:hidden">dark_mode</span>
        <span class="material-symbols-outlined hidden dark:block">light_mode</span>
    </button>
</Layout>

<script>
    const themeToggle = document.getElementById('theme-toggle');
    
    themeToggle?.addEventListener('click', () => {
        document.documentElement.classList.toggle('dark');
        
        // Save preference
        if (document.documentElement.classList.contains('dark')) {
            localStorage.theme = 'dark';
        } else {
            localStorage.theme = 'light';
        }
    });
</script>
