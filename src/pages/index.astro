---
import Layout from '../layouts/Layout.astro';
import {
  Grid3x3,
  Sliders,
  Paperclip,
  SendFill,
  ArrowUpRight,
  ThreeDots,
  Layers,
  ChevronDown,
  Cpu,
  Palette,
  GraphUp,
  People,
  Lightning,
  CurrencyDollar,
  Gear,
  ShieldCheck,
  CheckCircleFill
} from 'react-bootstrap-icons';
---

<Layout title="Atlas AI | Your personal agentic 2D game developer" showToggle={false}>
  <!-- Header -->
  <header class="sticky top-0 z-50 bg-white/80 dark:bg-slate-900/80 backdrop-blur-md border-b border-slate-100 dark:border-slate-800 transition-all">
    <div class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">
      <div class="flex items-center gap-3 bg-neutral-100/80 dark:bg-neutral-800/80 backdrop-blur-md px-5 py-2.5 rounded-full border border-neutral-200/50 dark:border-neutral-700/50 shadow-sm">
          <img src="/logo.png" alt="atlas" class="w-8 h-8">
          <span class="font-bold tracking-tight text-lg">Atlas</span>
      </div>
      <nav class="hidden md:flex items-center space-x-8 text-sm font-medium text-slate-500 dark:text-slate-400">
        <a class="hover:text-primary transition-colors" href="#">Features</a>
        <a class="hover:text-primary transition-colors" href="#">Pricing</a>
        <a class="hover:text-primary transition-colors" href="#">About</a>
        <a class="hover:text-primary transition-colors" href="#">API</a>
      </nav>
      <div class="flex items-center space-x-4">
        <a class="text-sm font-semibold px-4" href="#">Log in</a>
        <a class="bg-primary text-white px-6 py-2.5 rounded-full font-semibold text-sm hover:opacity-90 transition-all shadow-md" href="#">Get Started</a>
      </div>
    </div>
  </header>

  <!-- Hero Section -->
  <section class="max-w-4xl mx-auto px-6 pt-16 pb-24 text-center relative">
    
    <!-- Floating Agent Images -->
    <div class="absolute top-[0%] left-[-10%] md:left-[-20%] lg:left-[-10%] w-24 h-24 md:w-32 md:h-32 -rotate-12 opacity-60 dark:opacity-40 z-0 pointer-events-none select-none hidden md:block">
        <img src="/architect.png" alt="Architect" class="w-full h-full object-contain drop-shadow-xl">
    </div>
    <div class="absolute top-[10%] right-[-10%] md:right-[-20%] lg:right-[-10%] w-20 h-20 md:w-28 md:h-28 rotate-12 opacity-60 dark:opacity-40 z-0 pointer-events-none select-none hidden md:block">
        <img src="/tactician.png" alt="Tactician" class="w-full h-full object-contain drop-shadow-xl">
    </div>
    <div class="absolute bottom-[-10%] left-[5%] w-28 h-28 md:w-36 md:h-36 -rotate-6 opacity-60 dark:opacity-40 z-0 pointer-events-none select-none hidden md:block">
        <img src="/simulator.png" alt="Simulator" class="w-full h-full object-contain drop-shadow-xl">
    </div>

    <div class="inline-flex items-center space-x-2 bg-blue-50 dark:bg-blue-900/20 text-blue-600 dark:text-blue-400 px-3 py-1 rounded-full text-xs font-medium mb-8 border border-blue-100 dark:border-blue-800 relative z-10">
      <span class="relative flex h-2 w-2">
        <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-blue-400 opacity-75"></span>
        <span class="relative inline-flex rounded-full h-2 w-2 bg-blue-500"></span>
      </span>
      <span>Introducing Simulator, the new player behavior simulation agent</span>
    </div>
    <h1 class="text-5xl md:text-6xl font-bold tracking-tight mb-6 leading-[1.1] relative z-10">
      Your personal agentic <br/> 2D game developer.
    </h1>
    <p class="text-lg text-slate-500 dark:text-slate-400 mb-12 max-w-xl mx-auto font-light relative z-10">
      Bring game mechanics, quests and systems to life with the first AI agent designed for full-cycle production.
    </p>
    <div class="max-w-3xl mx-auto venture-border corner-accent bg-white dark:bg-slate-900 p-1 shadow-2xl rounded-sm relative z-10">
      <div class="border border-slate-100 dark:border-slate-800 p-6 text-left">
        <div class="flex items-center justify-between mb-8">
          <div class="flex items-center space-x-2 px-3 py-1.5 bg-slate-50 dark:bg-slate-800 rounded border border-slate-200 dark:border-slate-700">
            <Sliders size={14} />
            <span class="text-xs font-mono font-medium">v3.4.2-stable</span>
          </div>
        </div>
        <div class="min-h-[40px] flex items-center">
          <p class="text-2xl text-slate-400 dark:text-slate-600 font-light">Create a 2D action platformer for mobile...</p>
        </div>
        <div class="flex items-center justify-between mt-6 pt-6 border-t border-slate-50 dark:border-slate-800">
          <div class="flex space-x-4">
            <button class="text-slate-400 hover:text-slate-600 dark:hover:text-slate-200 cursor-pointer"><Paperclip size={20} /></button>
          </div>
          <div class="flex items-center space-x-4">
            <button class="text-slate-400 hover:text-slate-600 dark:hover:text-slate-200 cursor-pointer"><Sliders size={20} /></button>
            <button class="bg-primary text-white w-10 h-10 rounded-full flex items-center justify-center cursor-pointer hover:opacity-90 transition-opacity">
              <SendFill size={18} />
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Logos -->
  <div class="border-y border-slate-100 dark:border-slate-800 bg-white/50 dark:bg-slate-900/50 py-10">
    <div class="max-w-7xl mx-auto px-6">
      <div class="flex flex-wrap justify-center md:justify-between items-center gap-8 opacity-40 grayscale hover:grayscale-0 transition-all cursor-default">
        <span class="font-bold text-xl">SEDGWICK</span>
        <span class="font-bold text-xl">REDDIT</span>
        <span class="font-bold text-xl">CALENDLY</span>
        <span class="font-bold text-xl">OMI</span>
        <span class="font-bold text-xl">HUCKBERRY</span>
      </div>
    </div>
  </div>

  <!-- Why Atlas Exists -->
  <section class="max-w-7xl mx-auto px-6 py-32 grid md:grid-cols-2 gap-16 items-center">
    <div>
      <div class="relative inline-block mb-4">
        <h2 class="text-4xl font-bold mb-6">Why Atlas exists</h2>
        <div class="absolute -right-40 top-0 hidden lg:block">
          <p class="font-hand text-xl text-slate-400 leading-none">Because you<br/>probably asked...<br/>so uh...</p>
          <svg class="w-16 h-16 text-slate-300 transform rotate-12 mt-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path d="M3 10h10a8 8 0 018 8v2M3 10l4-4m-4 4l4 4" stroke-linecap="round" stroke-linejoin="round" stroke-width="1"></path>
          </svg>
        </div>
      </div>
      <p class="text-slate-500 dark:text-slate-400 mb-8 max-w-md leading-relaxed">
        The next decade of creative value will be created by developers who understand how to build infrastructure for intelligence—not just software.
      </p>
      <p class="text-slate-500 dark:text-slate-400 mb-10 max-w-md leading-relaxed">
        We operate at the intersection of data systems, automation, and generative intelligence, building engines that are designed to scale with the complexity of modern interactive media.
      </p>
      <button class="venture-border corner-accent px-6 py-3 text-sm font-semibold flex items-center space-x-2 hover:bg-slate-50 dark:hover:bg-slate-800 transition-colors cursor-pointer">
        <span>Explore the docs</span>
        <ArrowUpRight size={14} />
      </button>
    </div>
    <div class="space-y-4">
      <div class="venture-border corner-accent bg-white dark:bg-slate-800 p-6">
        <div class="flex justify-between items-start mb-4">
          <span class="text-[10px] font-mono uppercase tracking-widest text-slate-400">Layer 01: Engine</span>
          <ThreeDots className="text-slate-300 text-sm" />
        </div>
        <div class="flex items-center space-x-3 text-sm font-medium">
          <Layers className="text-slate-400" />
          <span>Physics & Core Rendering</span>
        </div>
        <p class="text-xs text-slate-400 mt-1 ml-8">Collision, particles, shading systems</p>
      </div>
      <div class="flex justify-center text-slate-300">
        <ChevronDown />
      </div>
      <div class="venture-border corner-accent bg-white dark:bg-slate-800 p-6">
        <div class="flex justify-between items-start mb-4">
          <span class="text-[10px] font-mono uppercase tracking-widest text-slate-400">Layer 02: Logic</span>
          <ThreeDots className="text-slate-300 text-sm" />
        </div>
        <div class="flex items-center space-x-3 text-sm font-medium">
          <Cpu className="text-slate-400" />
          <span>Agentic Behavior Engine</span>
        </div>
        <p class="text-xs text-slate-400 mt-1 ml-8">NPC logic, quest branching, narrative trees</p>
      </div>
      <div class="flex justify-center text-slate-300">
        <ChevronDown />
      </div>
      <div class="venture-border corner-accent bg-white dark:bg-slate-800 p-6">
        <div class="flex justify-between items-start mb-4">
          <span class="text-[10px] font-mono uppercase tracking-widest text-slate-400">Layer 03: Assets</span>
          <ThreeDots className="text-slate-300 text-sm" />
        </div>
        <div class="flex items-center space-x-3 text-sm font-medium">
          <Palette className="text-slate-400" />
          <span>Dynamic Sprite Generation</span>
        </div>
        <div class="mt-4 pt-4 border-t border-slate-100 dark:border-slate-700 flex justify-between text-[10px] font-mono uppercase text-primary">
          <span>Latency: 42ms</span>
          <span>99.9% Precision</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Built to Scale -->
  <section class="bg-slate-50 dark:bg-slate-900/40 py-32">
    <div class="max-w-7xl mx-auto px-6">
      <div class="mb-16">
        <div class="relative inline-block">
          <h2 class="text-5xl font-bold leading-tight">Built to scale <br/> with precision</h2>
          <div class="absolute -right-48 top-4 hidden lg:block">
            <svg class="w-12 h-12 text-slate-400 transform -rotate-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path d="M14 5l7 7m0 0l-7 7m7-7H3" stroke-linecap="round" stroke-linejoin="round" stroke-width="1"></path>
            </svg>
            <p class="font-hand text-lg text-slate-500 mt-2">We've got some<br/>records you'd<br/>really wanna<br/>know.</p>
          </div>
        </div>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="venture-border corner-accent bg-white dark:bg-slate-800 p-8 group">
          <div class="flex items-center space-x-2 text-slate-400 mb-6">
            <GraphUp size={14} />
            <span class="text-[10px] font-mono uppercase tracking-widest">Efficiency Multiplier</span>
          </div>
          <div class="flex items-baseline space-x-1">
            <span class="text-6xl font-bold">10x</span>
          </div>
          <p class="text-xs text-slate-400 mt-4 group-hover:text-primary transition-colors">vs. industry avg. of 1.2x</p>
        </div>
        <div class="venture-border corner-accent bg-white dark:bg-slate-800 p-8 group">
          <div class="flex items-center space-x-2 text-slate-400 mb-6">
            <People size={14} />
            <span class="text-[10px] font-mono uppercase tracking-widest">Global Reach</span>
          </div>
          <div class="flex items-baseline space-x-1">
            <span class="text-6xl font-bold">4.2M</span>
          </div>
          <p class="text-xs text-slate-400 mt-4 group-hover:text-primary transition-colors">Daily simulated entities</p>
        </div>
        <div class="venture-border corner-accent bg-white dark:bg-slate-800 p-8 group">
          <div class="flex items-center space-x-2 text-slate-400 mb-6">
            <Lightning size={14} />
            <span class="text-[10px] font-mono uppercase tracking-widest">Output Velocity</span>
          </div>
          <div class="flex items-baseline space-x-1">
            <span class="text-6xl font-bold">3.4x</span>
          </div>
          <p class="text-xs text-slate-400 mt-4 group-hover:text-primary transition-colors">More output with less cost</p>
        </div>
        <div class="venture-border corner-accent bg-white dark:bg-slate-800 p-8 group">
          <div class="flex items-center space-x-2 text-slate-400 mb-6">
            <CurrencyDollar size={14} />
            <span class="text-[10px] font-mono uppercase tracking-widest">ROI increase</span>
          </div>
          <div class="flex items-baseline space-x-1">
            <span class="text-6xl font-bold">470%</span>
          </div>
          <p class="text-xs text-slate-400 mt-4 group-hover:text-primary transition-colors">Measured over 18-month period</p>
        </div>
        <div class="venture-border corner-accent bg-white dark:bg-slate-800 p-8 group">
          <div class="flex items-center space-x-2 text-slate-400 mb-6">
            <Gear size={14} />
            <span class="text-[10px] font-mono uppercase tracking-widest">Integration Level</span>
          </div>
          <div class="flex items-baseline space-x-1">
            <span class="text-6xl font-bold">10%</span>
          </div>
          <p class="text-xs text-slate-400 mt-4 group-hover:text-primary transition-colors">Best-in-class deployment speed</p>
        </div>
        <div class="venture-border corner-accent bg-white dark:bg-slate-800 p-8 group">
          <div class="flex items-center space-x-2 text-slate-400 mb-6">
            <ShieldCheck size={14} />
            <span class="text-[10px] font-mono uppercase tracking-widest">Uptime Guarantee</span>
          </div>
          <div class="flex items-baseline space-x-1">
            <span class="text-6xl font-bold">99.9%</span>
          </div>
          <p class="text-xs text-slate-400 mt-4 group-hover:text-primary transition-colors">Across all production workloads</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Layers Detail -->
  <section class="max-w-7xl mx-auto px-6 py-32">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <div class="venture-border corner-accent bg-white dark:bg-slate-900 p-10">
        <span class="text-[10px] font-mono tracking-widest text-slate-400 uppercase">Production Layer</span>
        <h3 class="text-xl font-bold mt-4 mb-6 leading-snug">Automated Quest Logic & Branching</h3>
        <ul class="space-y-4 mb-10">
          <li class="flex items-start space-x-3 text-sm text-slate-500 dark:text-slate-400">
            <CheckCircleFill className="text-primary text-lg" />
            <span>Real-time narrative flow generation</span>
          </li>
          <li class="flex items-start space-x-3 text-sm text-slate-500 dark:text-slate-400">
            <CheckCircleFill className="text-primary text-lg" />
            <span>Automated state-machine testing</span>
          </li>
          <li class="flex items-start space-x-3 text-sm text-slate-500 dark:text-slate-400">
            <CheckCircleFill className="text-primary text-lg" />
            <span>Dynamic NPC dialogue synthesis</span>
          </li>
        </ul>
        <div class="bg-slate-50 dark:bg-slate-800 p-4 font-mono text-[10px] text-slate-500 border border-slate-100 dark:border-slate-700">
          <div class="flex justify-between mb-2">
            <span>$ atlas.quest_gen()</span>
            <ThreeDots className="text-[10px]" />
          </div>
          <div class="text-green-500">✓ 2,400 paths generated</div>
        </div>
      </div>
      <div class="venture-border corner-accent bg-white dark:bg-slate-900 p-10">
        <span class="text-[10px] font-mono tracking-widest text-slate-400 uppercase">Intelligence Layer</span>
        <h3 class="text-xl font-bold mt-4 mb-6 leading-snug">Dynamic Asset Scaling & Generation</h3>
        <ul class="space-y-4 mb-10">
          <li class="flex items-start space-x-3 text-sm text-slate-500 dark:text-slate-400">
            <CheckCircleFill className="text-primary text-lg" />
            <span>On-demand vector sprite creation</span>
          </li>
          <li class="flex items-start space-x-3 text-sm text-slate-500 dark:text-slate-400">
            <CheckCircleFill className="text-primary text-lg" />
            <span>Automatic resolution optimization</span>
          </li>
          <li class="flex items-start space-x-3 text-sm text-slate-500 dark:text-slate-400">
            <CheckCircleFill className="text-primary text-lg" />
            <span>Multi-style consistency engine</span>
          </li>
        </ul>
        <div class="bg-slate-50 dark:bg-slate-800 p-4 font-mono text-[10px] text-slate-500 border border-slate-100 dark:border-slate-700">
          <div class="flex justify-between mb-2">
            <span>$ atlas.asset_render()</span>
            <ThreeDots className="text-[10px]" />
          </div>
          <div class="text-blue-500">✓ 152 assets optimized</div>
        </div>
      </div>
      <div class="venture-border corner-accent bg-white dark:bg-slate-900 p-10">
        <span class="text-[10px] font-mono tracking-widest text-slate-400 uppercase">Infrastructure Layer</span>
        <h3 class="text-xl font-bold mt-4 mb-6 leading-snug">Multi-platform Logic Synchronization</h3>
        <ul class="space-y-4 mb-10">
          <li class="flex items-start space-x-3 text-sm text-slate-500 dark:text-slate-400">
            <CheckCircleFill className="text-primary text-lg" />
            <span>Unified C# & Swift bridging</span>
          </li>
          <li class="flex items-start space-x-3 text-sm text-slate-500 dark:text-slate-400">
            <CheckCircleFill className="text-primary text-lg" />
            <span>Server-side authority modeling</span>
          </li>
          <li class="flex items-start space-x-3 text-sm text-slate-500 dark:text-slate-400">
            <CheckCircleFill className="text-primary text-lg" />
            <span>Low-latency state replication</span>
          </li>
        </ul>
        <div class="bg-slate-50 dark:bg-slate-800 p-4 font-mono text-[10px] text-slate-500 border border-slate-100 dark:border-slate-700">
          <div class="flex justify-between mb-2">
            <span>$ atlas.sync_nodes()</span>
            <ThreeDots className="text-[10px]" />
          </div>
          <div class="text-purple-500">✓ 12 edge nodes active</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="border-t border-slate-100 dark:border-slate-800 pt-24 pb-12 bg-white dark:bg-slate-950">
    <div class="max-w-7xl mx-auto px-6 text-center">
      <h2 class="text-4xl font-bold mb-6">Ready to build the future?</h2>
      <p class="text-slate-400 mb-12 max-w-lg mx-auto">Join 500+ game studios reimagining production workflows with Atlas.</p>
      <div class="flex flex-col md:flex-row items-center justify-center space-y-4 md:space-y-0 md:space-x-6">
        <a class="bg-primary text-white px-8 py-4 rounded-full font-bold transition-all shadow-lg hover:shadow-primary/20" href="#">Create Free Project</a>
        <a class="px-8 py-4 border border-slate-200 dark:border-slate-700 rounded-full font-bold hover:bg-slate-50 dark:hover:bg-slate-800 transition-colors" href="#">Book a Demo</a>
      </div>
      <div class="mt-32 pt-12 border-t border-slate-100 dark:border-slate-800 flex flex-col md:flex-row items-center justify-between text-xs text-slate-400 font-mono tracking-widest uppercase">
        <div class="mb-4 md:mb-0">© 2024 ATLAS TECHNOLOGIES INC.</div>
        <div class="flex space-x-8">
          <a class="hover:text-primary transition-colors" href="#">Twitter</a>
          <a class="hover:text-primary transition-colors" href="#">Discord</a>
          <a class="hover:text-primary transition-colors" href="#">GitHub</a>
          <a class="hover:text-primary transition-colors" href="#">Legal</a>
        </div>
      </div>
    </div>
  </footer>
</Layout>
